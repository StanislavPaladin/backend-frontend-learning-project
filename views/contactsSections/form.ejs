<form name="contacts-form" class="contacts-form" id="contacts-form">
    <div class="form-group">
        <div class="input-grp">
            <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp"
                placeholder="Ваша почта">
            <i class="fas fa-envelope"></i>
        </div>
    </div>
    <div class="form-group">
        <div class="input-grp">
            <input type="text" class="form-control" id="name" name="name" placeholder="Ваше имя">
            <i class="fas fa-user"></i>
        </div>
    </div>
    <div class="form-group">
        <div class="input-grp">
            <input type="phone" class="form-control" id="phone" name="phone" placeholder="+38(071)071-071-1">
            <i class="fas fa-phone"></i>
        </div>
    </div>
    <div class="form-group">
        
        <div class="input-grp">
            <textarea class="form-control message" id="message" name="message" rows="3" placeholder="Ваше сообщение"></textarea>
            <i class="fas fa-pen"></i>
        </div>
    </div>
    <button type="button" class="submit-btn" id="form-button">Отправить</button>
</form>